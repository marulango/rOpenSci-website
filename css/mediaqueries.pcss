/*  --------------------------------------------------  Media Queries Declaration */

@custom-media --tPortrait (max-width: 950px);
@media screen and (orientation: portrait) and (--tPortrait) {
    .container {
        width: 96%;
    }

    .row {
        text-align: center;
        justify-content: center;
    }

    @for $i from 1 to 4 {
        .col-$i { 
            flex-basis: 50%;
            max-width: 50%;
            box-sizing: border-box;
        }
    }

    @for $i from 5 to 6 {
        .col-$i { 
            flex-basis: 90%;
            max-width: 90%;
            box-sizing: border-box;
        }
    }

    @for $i from 1 to 12 {
        .col-offset-$i {
            margin-left: 0;
        }
    }
}

